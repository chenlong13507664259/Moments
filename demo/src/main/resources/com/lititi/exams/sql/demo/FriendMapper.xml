<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lititi.exams.web.dao.FriendMapper">

    <resultMap type="com.lititi.exams.web.entity.Friend" id="FriendResultMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="friendId" column="friend_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">id, user_id, friend_id, create_time</sql>

    <!--查询用户的所有好友ID-->
    <select id="selectFriendIdsByUserId" resultType="java.lang.Long">
        SELECT friend_id
        FROM friend
        WHERE user_id = #{userId,jdbcType=BIGINT}
    </select>

    <!--查询两人是否为好友关系-->
    <select id="selectByUserAndFriendId" resultMap="FriendResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM friend
        WHERE user_id = #{userId,jdbcType=BIGINT} AND friend_id = #{friendId,jdbcType=BIGINT}
    </select>

    <!--新增好友关系-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO friend(user_id, friend_id, create_time)
        VALUES (#{userId}, #{friendId}, #{createTime})
    </insert>

    <!--删除好友关系-->
    <delete id="deleteByUserAndFriendId">
        DELETE FROM friend
        WHERE user_id = #{userId,jdbcType=BIGINT} AND friend_id = #{friendId,jdbcType=BIGINT}
    </delete>

</mapper>
